# ============================================================================
# üìã ENVIRONMENT TEMPLATE - Copy to .env or .env.local and fill in your values
# ============================================================================
# ‚ö†Ô∏è SECURITY: Never commit actual .env files with real secrets to Git!
# Only this template (.env.example) should be version controlled.
# ============================================================================

# ============================================================================
# üîß ENVIRONMENT & MODE
# ============================================================================
# Options: development | staging | production
ENV=development

# Options: backtest | live
MODE=backtest

# ============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================================================
# For local development: use localhost
# For Docker: use service name 'db'
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading

# SQLAlchemy connection string
# Docker: postgresql://postgres:postgres@db:5432/trading
# Local:  postgresql://postgres:postgres@localhost:5432/trading
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading

# ============================================================================
# üîë BINANCE API CONFIGURATION
# ============================================================================
# Get keys from: https://testnet.binance.vision/
BINANCE_TESTNET=true
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ============================================================================
# üìà TRADING PARAMETERS
# ============================================================================
TRADE_SYMBOL=BTCUSDT
TRADE_INTERVAL=4h
TRADE_QUANTITY=0.001
INITIAL_CANDLES_HISTORY=5000
TRANSACTION_FEE_PCT=0.001
CONFIDENCE_THRESHOLD=0.30

# ============================================================================
# ü§ñ MODEL CONFIGURATION
# ============================================================================
MODEL_SAVE_PATH=src/models/xgboost_model.json
USE_MODEL_REGISTRY=false
DATA_FILE_PATH=data/test_df_features.csv
TARGET_COLUMN=signal

# Comma-separated feature columns
FEATURE_COLUMNS=rsi,bb_upper,bb_lower,bb_mid,bb_pct_b,sma_20,sma_50,ma_cross,price_momentum,atr,atr_pct

# ============================================================================
# üìß EMAIL NOTIFICATIONS (Gmail)
# ============================================================================
# Use app-specific password, not your main Gmail password
# Generate here: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=xxxx xxxx xxxx xxxx
EMAIL_TO=your_email@gmail.com
ENABLE_EMAIL=true

# ============================================================================
# üí¨ TELEGRAM NOTIFICATIONS
# ============================================================================
# Create bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ENABLE_TELEGRAM=true

# ============================================================================
# üîê SECURITY & AUTHENTICATION
# ============================================================================
# Generate secure key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=generate_a_secure_random_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpass

# ============================================================================
# üìù LOGGING
# ============================================================================
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# üìä PGADMIN (Optional - for Docker)
# ============================================================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin